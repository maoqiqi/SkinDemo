<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:padding="@dimen/eight"
    tools:context="com.software.march.skin.demo.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/eight"
        android:paddingLeft="@dimen/four"
        android:paddingRight="@dimen/four"
        android:paddingTop="@dimen/eight">

        <TextView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/selector_label_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/bg"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            skin:enable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/eight"
            android:text="Login"
            android:textColor="@color/text_primary_color"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:orientation="vertical"
        android:padding="@dimen/sixteen">

        <EditText
            android:id="@+id/et_email_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_edit_text_bg"
            android:drawablePadding="@dimen/eight"
            android:hint="邮箱"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingBottom="@dimen/four"
            android:paddingTop="@dimen/four"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:textSize="@dimen/text_size_normal"
            skin:enable="true" />

        <EditText
            android:id="@+id/et_password_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight"
            android:background="@drawable/selector_edit_text_bg"
            android:drawablePadding="@dimen/eight"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingBottom="@dimen/four"
            android:paddingTop="@dimen/four"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:textSize="@dimen/text_size_normal"
            skin:enable="true" />

        <Button
            android:id="@+id/btn_login_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sixteen"
            android:alpha="0.3"
            android:background="@drawable/selector_btn_login_bg"
            android:enabled="false"
            android:gravity="center"
            android:text="Login In"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            skin:enable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/eight"
        android:paddingLeft="@dimen/four"
        android:paddingRight="@dimen/four"
        android:paddingTop="@dimen/eight">

        <TextView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/selector_label_bg"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/bg"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            skin:enable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/eight"
            android:text="Login"
            android:textColor="@color/text_primary_color"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:orientation="vertical"
        android:padding="@dimen/sixteen">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_email_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_edit_text_bg"
                android:drawablePadding="@dimen/eight"
                android:hint="邮箱"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingBottom="@dimen/four"
                android:paddingTop="@dimen/four"
                android:textCursorDrawable="@drawable/edit_text_cursor"
                android:textSize="@dimen/text_size_normal"
                skin:enable="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sixteen">

            <EditText
                android:id="@+id/et_password_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight"
                android:background="@drawable/selector_edit_text_bg"
                android:drawablePadding="@dimen/eight"
                android:hint="密码"
                android:imeActionId="@+id/btn_login_2"
                android:imeActionLabel="register"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingBottom="@dimen/four"
                android:paddingTop="@dimen/four"
                android:textCursorDrawable="@drawable/edit_text_cursor"
                android:textSize="@dimen/text_size_normal"
                skin:enable="true" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_login_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sixteen"
            android:alpha="0.3"
            android:background="@drawable/selector_btn_login_bg"
            android:enabled="false"
            android:gravity="center"
            android:text="Login In"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            skin:enable="true" />

    </LinearLayout>
</LinearLayout>